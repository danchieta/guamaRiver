\setbeamercolor{frametitle}{bg=defaultcolor}

%\setbeamerfont{block title}{size={}}
%My new environment is Here
%==========================
\newenvironment{greenbox}[1]
{
\setbeamercolor{uppergrn}{fg=white,bg=pacificgreen}
\setbeamercolor{lowercol}{fg=black,bg=pacificcream}
\begin{beamerboxesrounded}[upper=uppergrn,lower=lowercol,shadow=true]{#1}
}
{
\end{beamerboxesrounded} 
}

\newenvironment{orangebox}[1]
{
\setbeamercolor{uppercol}{fg=white,bg=defaultcolor}
\setbeamercolor{lowercol}{fg=black,bg=pacificcream}

\begin{beamerboxesrounded}[upper=uppercol,lower=lowercol,shadow=true]{#1}
}
{
\end{beamerboxesrounded}
}

\newenvironment{bluebox}[1]
{
\setbeamercolor{upperblue}{fg=white,bg=pacificblue}
\setbeamercolor{lowercol}{fg=black,bg=pacificcream}
\setbeamertemplate{itemize item}{\textcolor{pacificblue}{$\bullet$}}
\begin{beamerboxesrounded}[upper=upperblue,lower=lowercol,shadow=false]{#1}
}
{
\end{beamerboxesrounded}
}

\newenvironment{graybox}[1]
{
\setbeamercolor{uppergray}{fg=white,bg=pacificgray}
\setbeamercolor{lowercol}{fg=black,bg=pacificcream}
\begin{beamerboxesrounded}[upper=uppergray,lower=lowercol,shadow=true]{#1}
}
{
\end{beamerboxesrounded}
}

\newenvironment{grassgreenbox}[1]
{
\setbeamercolor{uppergrass}{fg=white,bg=grassgreen}
\setbeamercolor{lowercol}{fg=black,bg=pacificcream}
\begin{beamerboxesrounded}[upper=uppergrass,lower=lowercol,shadow=true]{#1}
}
{
\end{beamerboxesrounded} 
}

